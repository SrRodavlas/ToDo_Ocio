<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_eCamara"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="92dp"
        android:background="@drawable/camara"
        android:onClick="tomarFoto"
        app:layout_constraintStart_toEndOf="@+id/img_nFoto"
        app:layout_constraintTop_toBottomOf="@+id/lbl_nLugar" />

    <Button
        android:id="@+id/btn_eGaleria"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/galeria"
        android:onClick="galeria"
        app:layout_constraintStart_toEndOf="@+id/img_nFoto"
        app:layout_constraintTop_toBottomOf="@+id/btn_eCamara" />

    <Button
        android:id="@+id/btn_nGuardar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="348dp"
        android:background="@drawable/save"
        android:onClick="actualizar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txt_nBio"
        android:layout_width="341dp"
        android:layout_height="139dp"
        android:layout_marginStart="232dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="@string/lbl_vBio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_nNombreLugar" />

    <RatingBar
        android:id="@+id/rtn_eBar"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginEnd="72dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.769"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_nBio" />

    <ImageView
        android:id="@+id/img_nFoto"
        android:layout_width="160dp"
        android:layout_height="133dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="416dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/btn_new" />

    <TextView
        android:id="@+id/lbl_nLugar"
        android:layout_width="112dp"
        android:layout_height="33dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="8dp"
        android:text="@string/lbl_vNombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_radioGroup" />

    <EditText
        android:id="@+id/txt_nNombreLugar"
        android:layout_width="228dp"
        android:layout_height="34dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:editable="true"
        android:text="@string/lbl_NombreLugar"
        app:layout_constraintStart_toEndOf="@+id/lbl_nLugar"
        app:layout_constraintTop_toBottomOf="@+id/id_radioGroup" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/mpv_nLocalizacion"
        android:layout_width="160dp"
        android:layout_height="133dp"
        android:layout_marginBottom="160dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/id_radioGroup"
        android:layout_width="305dp"
        android:layout_height="53dp"
        android:layout_marginStart="296dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rdb_eCine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:checked="false"
            android:text="@string/rdb_nCine"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioButton
            android:id="@+id/rdb_nParque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:checked="false"
            android:text="@string/rdb_nParque"
            app:layout_constraintStart_toEndOf="@+id/rdb_eCine"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioButton
            android:id="@+id/rdb_eRestaurante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:checked="false"
            android:text="@string/rdb_nRestaurante"
            app:layout_constraintStart_toEndOf="@+id/rdb_nParque"
            app:layout_constraintTop_toTopOf="parent" />

    </RadioGroup>

</android.support.constraint.ConstraintLayout>