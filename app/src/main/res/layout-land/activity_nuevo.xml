<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <Button
        android:id="@+id/btn_nGuardar"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="8dp"
        style="@style/SaveButtonStyle"
        android:onClick="insertar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/img_nFoto" />

    <EditText
        android:id="@+id/txt_nBio"
        android:layout_width="341dp"
        android:layout_height="146dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="@string/lbl_vBio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_nNombreLugar" />

    <RatingBar
        android:id="@+id/rtnBar"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginEnd="101dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_nGuardar"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_nBio" />

    <ImageButton
        android:id="@+id/img_nFoto"
        android:layout_width="160dp"
        android:layout_height="133dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorEspecial"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mpv_nLocalizacion"
        app:srcCompat="@drawable/ic_action_camera" />

    <TextView
        android:id="@+id/lbl_nLugar"
        android:layout_width="112dp"
        android:layout_height="33dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="19dp"
        android:layout_marginStart="16dp"
        android:text="@string/lbl_vNombre"
        app:layout_constraintBottom_toTopOf="@+id/txt_nBio"
        app:layout_constraintEnd_toStartOf="@+id/txt_nNombreLugar"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_nNombreLugar"
        android:layout_width="228dp"
        android:layout_height="34dp"
        android:layout_marginEnd="57dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="32dp"
        android:text="@string/lbl_NombreLugar"
        app:layout_constraintEnd_toStartOf="@+id/mpv_nLocalizacion"
        app:layout_constraintStart_toEndOf="@+id/lbl_nLugar"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/mpv_nLocalizacion"
        android:layout_width="160dp"
        android:layout_height="133dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="572dp" />

</android.support.constraint.ConstraintLayout>