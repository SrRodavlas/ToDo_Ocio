<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.grupo5.todo_ocio.Lista">

    <Button
        android:id="@+id/btn_buscar"
        android:onClick="ejeccutar_mapa"
        android:text="@string/btn_buscar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vsb_scroll"
        app:layout_constraintVertical_bias="1.0"
        style="@style/fabulousStyle" />

    <ScrollView
        android:id="@+id/vsb_scroll"
        android:layout_width="368dp"
        android:layout_height="380dp"
        android:layout_marginBottom="78dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lst_categorias">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

    </ScrollView>

    <ListView
        android:id="@+id/lst_categorias"
        android:layout_width="313dp"
        android:layout_height="64dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintBottom_toTopOf="@+id/vsb_scroll"
        app:layout_constraintEnd_toEndOf="parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_nuevo"
        android:onClick="ejecutar_nuevo"

        app:layout_constraintBottom_toTopOf="@+id/btn_buscar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_input_add"
        app:backgroundTint="@android:color/holo_red_dark"
        style="@style/boton_flotante" />

    <Button
        android:id="@+id/btn_provisional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:onClick="ejeccutar_ver"
        android:text="@string/btn_provisional"
        app:layout_constraintBottom_toTopOf="@+id/btn_buscar"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
