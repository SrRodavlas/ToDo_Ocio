<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_borrar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/lbl_Bio"
        android:layout_width="341dp"
        android:layout_height="146dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="@string/lbl_vBio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_nombreLugar" />

    <RatingBar
        android:id="@+id/rtnBar"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginEnd="72dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_Bio" />

    <ImageView
        android:id="@+id/img_Foto"
        android:layout_width="160dp"
        android:layout_height="133dp"
        android:layout_marginBottom="37dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/btn_new" />

    <TextView
        android:id="@+id/lbl_Lugar"
        android:layout_width="112dp"
        android:layout_height="33dp"
        android:layout_marginEnd="6dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="81dp"
        android:text="@string/lbl_Nombre"
        app:layout_constraintEnd_toStartOf="@+id/lbl_nombreLugar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lbl_nombreLugar"
        android:layout_width="228dp"
        android:layout_height="34dp"
        android:layout_marginEnd="22dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="15dp"
        android:text="@string/lbl_NombreLugar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lbl_Lugar"
        app:layout_constraintTop_toBottomOf="@+id/btn_borrar" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/mpv_Localizacion"
        android:layout_width="160dp"
        android:layout_height="133dp"
        android:layout_marginBottom="38dp"
        android:layout_marginStart="46dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>