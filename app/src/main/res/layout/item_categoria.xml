<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/lista">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Texto Frase"
        android:id="@+id/txt_PuntuacionItem"
        android:layout_below="@+id/txt_TituloItem"
        android:layout_toRightOf="@+id/img_ImagenItem"
        android:layout_toEndOf="@+id/img_ImagenItem" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Titulo Frase"
        android:id="@+id/txt_TituloItem"
        android:textSize="21sp"
        android:textColor="#283fec"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/img_ImagenItem"
        android:layout_toEndOf="@+id/img_ImagenItem" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:id="@+id/img_ImagenItem"
        android:cropToPadding="false"
        android:src="@android:drawable/btn_star"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/txt_PuntuacionItem"
        android:maxHeight="35dp"
        android:maxWidth="74dp"
        android:adjustViewBounds="true" />

</RelativeLayout>