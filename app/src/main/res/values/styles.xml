<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="fabulousStyle">
        <item name="android:layout_width">308dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">17dp</item>
        <item name="android:layout_marginEnd">36dp</item>
    </style>

    <style name="WhateverTheme" parent="Theme.AppCompat.NoActionBar" >
        <item name="colorPrimary">@color/colorPrincipal</item>
        <item name="colorPrimaryDark">@color/colorPrincipalOscuro</item>
        <item name="colorAccent">@color/colorEspecial</item>
        <item name="android:textColorPrimary">@color/text_color_primario</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="boton_flotante">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">368dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>

    </style>

    <style name="lista">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="SaveButtonStyle">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@drawable/save</item>
    </style>

    <style name="CameraButton">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@drawable/camara</item>
    </style>

    <style name="GalleryButton">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_marginEnd">28dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@drawable/galeria</item>
    </style>

    <style name="CameraButtonLand">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">92dp</item>
        <item name="android:background">@drawable/camara</item>
    </style>

    <style name="GalleryButtonLand">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">27dp</item>
        <item name="android:background">@drawable/galeria</item>
    </style>

</resources>